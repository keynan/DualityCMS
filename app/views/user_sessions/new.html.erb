<h1>Log in</h1>

<div>Don't have an account? <%= link_to "Sign up!", signup_path %></div>
<div style="border: 4px black solid;">
	<%= form_for @user_session do |f| %>
		<%# deprecated f.error_messages %>
		<%= form_field_formater( f.label(:login), f.text_field(:login) ) %>
		<%= form_field_formater( f.label(:password), f.password_field(:password) ) %>
		<%= form_field_formater( f.label(''), f.submit("Log in")) %>
	<% end %>
</div>